@model Confluence.Blueprint.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}


@section MenuGroup{
        
}
@section PageScripts{
<script src="@Url.Content("~/js/assets/jquery.validate.min.js")" type="text/javascript"></script>
}

@section PageHeader{
Change Password
}

            <p>
                Use the form below to change your password. 
            </p>
            <p>
                New passwords are required to be a minimum of 6 characters in length.
            </p>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myForm", name = "myForm" }))
    {
        <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.OldPassword)
            </div>
            <div class="input-control password" style="width:380px">
                @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Enter old password", id = "oldpwd", name = "oldpwd", @class = "required" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.NewPassword)
            </div>
            <div class="input-control password" style="width:380px">
                @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Enter new password", id = "pwd", name = "pwd", @class = "required", minlength = "6" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="input-control text" style="width:380px">
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm new password", id = "cpwd", name = "cpwd", @class = "required", equalTo="#pwd", minlength = "6" })
            </div>

            <p>
                <input type="submit" value="Change Password" />
            </p>
        </fieldset>
    </div>
    }
@section PageFooterScripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#myForm').on('submit', function () {
            return $('#myForm').valid();
        });
    });
        
    </script>
}